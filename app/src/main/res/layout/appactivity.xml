<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.androidsession4hw.AppActivity">
    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/centerView"
        android:visibility="invisible"
        android:layout_margin="1dp"
        android:layout_centerInParent="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addfragmentAbutton"
        android:textAllCaps="false"
        android:text="Add FragmentA"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove FragmentA"
        android:id="@+id/removefragmentAbutton"
        android:textAllCaps="false"
        android:layout_below="@id/addfragmentAbutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addfragmentBbutton"
        android:textAllCaps="false"
        android:text="Add FragmentB"
        android:layout_below="@id/removefragmentAbutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove FragmentB"
        android:id="@+id/removefragmentBbutton"
        android:textAllCaps="false"
        android:layout_below="@id/addfragmentBbutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
